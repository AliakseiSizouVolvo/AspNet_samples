@model LoginModel
@{
    ViewData["Title"] = "Login";
}


<div>
    <form asp-action="LoginUser" method="post">
        <label for="email-input">Email:</label>
        <br>
        <input type="text" id="email-input" asp-for="Email" />
        <br />
        <label for="pswd-input">Password</label>
        <br />
        <input type="password" id="pswd-input" asp-for="Password" />
        <br /> 
        <br />
        <input type="submit" value="Login" />
    </form>
</div>

