@model BookModel

@{
    ViewBag.Title = "Create book";
    Layout = "_Layout";
}

<h2>Create book</h2>

<div>
    <form asp-action="Create" asp-controller="Book" method="post">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" type="text">
            <span asp-validation-for="Name"></span>

        </div>
        <div class="form-group">
            <label asp-for="ISBN">ISBN</label>
            <input asp-for="ISBN" type="text">
            <span asp-validation-for="ISBN"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price">Price</label>
            <input asp-for="Price" type="text">
            <span asp-validation-for="Price"></span>

        </div>
        <div class="form-group">
            <label asp-for="Year">Year</label>
            <input asp-for="Year" type="text">
            <span asp-validation-for="Year"></span>

        </div>
        
        <div>
            <button class="btn btn-secondary">Submit</button>
        </div>
    </form>
</div>
