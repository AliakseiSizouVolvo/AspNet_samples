@model BookModel

@{
    ViewBag.Title = "Create book";
    Layout = "_Layout";
}

<h2>Create book</h2>

<div class="row">
    <form asp-action="Create" asp-controller="Book" method="post">
        <div class="form-group col-12 col-lg-6 col-xl-4 mb-3">
            <label class="form-label" asp-for="Name">Name</label>
            <input class="form-control" asp-for="Name" type="text">
            <span asp-validation-for="Name"></span>

        </div>
        <div class="form-group  col-12 col-lg-6 col-xl-4 mb-3">
            <label class="form-label" asp-for="ISBN">ISBN</label>
            <input class="form-control" asp-for="ISBN" type="text">
            <span asp-validation-for="ISBN"></span>
        </div>
        <div class="form-group col-12 col-lg-6 col-xl-4 mb-3">
            <label class="form-label" asp-for="Price">Price</label>
            <input class="form-control" asp-for="Price" type="text">
            <span asp-validation-for="Price"></span>

        </div>
        <div class="form-group col-12 col-lg-6 col-xl-4 mb-3">
            <label class="form-label" asp-for="Year">Year</label>
            <input class="form-control" asp-for="Year" type="text">
            <span asp-validation-for="Year"></span>

        </div>

        <button class="btn btn-secondary col-12 col-lg-6 col-xl-4 mb-3 ">Submit</button>
    </form>
</div>
@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}
